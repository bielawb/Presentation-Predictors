<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    SizeToContent="Height"
    Title="Service Stopper"
    Topmost="True">
    <Grid Margin="10,40,10,10">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="2*" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock 
            Margin="10" TextAlignment="Center" FontFamily="Anonymous Pro for PowerLine" FontSize="100" 
            TextWrapping="WrapWithOverflow" VerticalAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect Direction="-45" Color="#FFB6C2CB" ShadowDepth="10" BlurRadius="14" />
            </TextBlock.Effect>
            Our Sponsors:
        </TextBlock>
        <Image Grid.Row="1" Source="Media/sponsors.png" />
        <TextBlock Grid.Row="2" TextAlignment="Center" FontFamily="Anonymous Pro for PowerLine" FontSize="200"
            VerticalAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect Direction="45" Color="#FFB6C2CB" ShadowDepth="20" BlurRadius="20" />
            </TextBlock.Effect>
            THANK YOU!
        </TextBlock>
    </Grid>
</Window>
